<resources xmlns:tools="http://schemas.android.com/tools" >

    <!-- Base application theme. -->
    <style name="Theme.EnjelWater" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A9EDFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="actionOverflowButtonStyle">@style/Threedotcolor</item>

    </style>

    <style name="Theme.EnjelWater.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Threedotcolor" parent="Widget.AppCompat.Light.ActionButton.Overflow">

        <item name="tint">@color/black</item>

    </style>

    <style name="Theme.EnjelWater.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EnjelWater.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>